{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "APP_NAME",
    "AUTH_SECRET",
    "AUTH_GOOGLE_SECRET",
    "AUTH_GOOGLE_ID",
    "DATABASE_URL",
    "TRIGGER_PROJECT_ID",
    "BLOB_READ_WRITE_TOKEN",
    "TRIGGER_SECRET_KEY",
    "NEXT_PUBLIC_APP_URL",
    "RESEND_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
